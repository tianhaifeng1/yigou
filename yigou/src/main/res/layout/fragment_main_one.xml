<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fm_main_top_search" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/fm_one_swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ttitle_and_top_h"
        android:background="@color/color_white">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/fm_one_banner"
                    android:layout_margin="@dimen/dp6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp200"
                    app:autoTurningTime="3000"
                    app:canLoop="true" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp6"
                    android:id="@+id/fm_one_recyclerview_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/goodslist_bg"></androidx.recyclerview.widget.RecyclerView>


                <!-- 预售专区 -->
                <LinearLayout
                    android:id="@+id/fm_one_yslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/t_yushou"
                    android:orientation="vertical"
                    android:gravity="bottom|center_horizontal"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_marginTop="@dimen/dp10"
                    android:padding="0dp"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fm_one_recyclerview_ys"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp5"
                        android:paddingRight="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp46"
                        ></androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/fm_one_more_ys"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_frist_jrtm_title_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp80"
                    android:background="@mipmap/main_bottom_title_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_marginTop="@dimen/dp10"
                    >


                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fm_one_recyclerview_jrtm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/main_bottom_content_bg"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp6"
                    android:minHeight="@dimen/dp10"
                    ></androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:id="@+id/main_bottom_title_xinpin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp80"
                    android:background="@mipmap/main_bottom_title_xinpin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_marginTop="@dimen/dp10"
                    >

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fm_one_recyclerview_jrtj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/main_bottom_content_bg"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp6"
                    android:minHeight="@dimen/dp10"
                    ></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/fm_one_lin_goodlist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@mipmap/t_goodslist"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp10"

                />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fm_one_recyclerview_goodlist"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_marginBottom="@dimen/dp10"
                    android:minHeight="@dimen/dp10"
                    >
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
