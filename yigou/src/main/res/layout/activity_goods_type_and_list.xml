<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".activity.Goods.GoodsTypeAndListActivity">

    <include layout="@layout/statetitle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ttitle_h"
        android:paddingRight="@dimen/dp20"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="@dimen/ttitle_h"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            app:srcCompat="@mipmap/ic_back"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"/>

        <RelativeLayout
            android:id="@+id/title_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:background="@drawable/shape_c_f6">

            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="match_parent"
                android:src="@mipmap/main_search"
                android:padding="@dimen/dp8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp40"
                android:gravity="center_vertical"
                android:text="搜索商品"
                android:textColor="@color/textcolor_tishi" />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_fa" />
    <!-- 类型布局 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/gtal_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="#fa2f49"
        app:tabSelectedTextColor="#fa2f49"
        app:tabTextColor="@color/color_black"
        app:tabRippleColor="#f2f2f2"
        app:tabIndicatorFullWidth="false"
        >
    </com.google.android.material.tabs.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg_fa" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/gtal_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

</LinearLayout>