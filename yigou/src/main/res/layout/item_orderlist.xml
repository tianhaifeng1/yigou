<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/line_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:background="@color/color_white"
        >
        
        <TextView
            android:paddingLeft="@dimen/dp10"
            android:id="@+id/item_orderlist_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="儒龙好医生"
            android:textStyle="bold"
            android:textColor="@color/color_name"
            />
        
        <TextView
            android:id="@+id/item_orderlist_orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp10"
            tools:text="等待发货"
            android:textColor="@color/textcolor_point"
            />
        <TextView
            android:layout_marginTop="@dimen/dp3"
            android:id="@+id/item_orderlist_type"
            android:paddingLeft="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_orderlist_shopname"
            android:textColor="@color/textcolor_point"
            />
        <TextView
            android:layout_marginTop="@dimen/dp3"
            android:id="@+id/item_orderlist_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_orderlist_shopname"
            android:layout_toRightOf="@+id/item_orderlist_type"
            />

        
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/line_layout1"
        android:background="@color/color_line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_orderlist_goodslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:layout_below="@id/line_view"
        ></androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/item_orderlist_paytype_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp6"
        android:paddingBottom="@dimen/dp6"
        android:background="@color/color_white"
        android:layout_below="@id/item_orderlist_goodslist"
        >

        <TextView
            android:id="@+id/item_orderlist_goodstotal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            tools:text="共1件商品  合计：￥3.99"
            android:textColor="@color/color_name"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp10"
            />
        <TextView
            android:id="@+id/item_orderlist_paytype"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            tools:text="(余额支付)"
            android:layout_toLeftOf="@+id/item_orderlist_goodstotal"
            android:textColor="@color/textcolor_point"
            android:paddingRight="@dimen/dp10"

            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/item_orderlist_bottom_rl"
        android:layout_width="match_parent"
        android:padding="@dimen/dp10"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_white"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_below="@id/item_orderlist_paytype_rel"
        >
        <TextView
            android:id="@+id/item_orderlist_btnleft"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            tools:text="提醒发货"
            android:gravity="center"
            android:textColor="@color/color_name"
            android:background="@drawable/shape_r_gray_line"
            android:layout_toLeftOf="@id/item_orderlist_btnmiddle"
            />
        <TextView
            android:id="@+id/item_orderlist_btnmiddle"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            tools:text="提醒发货"
            android:gravity="center"
            android:textColor="@color/color_name"
            android:background="@drawable/shape_r_gray_line"
            android:layout_toLeftOf="@id/item_orderlist_btnright"
            android:layout_marginLeft="@dimen/dp16"
            />

        <TextView
            android:id="@+id/item_orderlist_btnright"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            tools:text="申请退款"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:background="@drawable/shape_r_red"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp16"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_orderlist_ysicon"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp15"
        android:src="@mipmap/t_ysorder"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp100"
        android:visibility="gone"
        />
</RelativeLayout>