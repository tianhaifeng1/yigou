<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_ea"
    tools:context=".activity.vip.MyEarningTxActivity">

    <include
        android:id="@+id/include"
        layout="@layout/ttitle" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="75dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp120"
        android:background="@mipmap/bg_txsq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/ame_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="26dp"
        android:gravity="center"
        tools:text="200.60元"
        android:textSize="@dimen/dp26"
        android:textColor="@color/color_white"
        app:layout_constraintTop_toTopOf="@+id/view"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="可提现金额"
        android:textColor="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/ame_money"
        />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/color_name"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/ame_money_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp80"
            android:layout_marginRight="@dimen/dp80"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:hint="输入金额"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_name"
            android:inputType="numberDecimal"
            />
        <TextView
            android:id="@+id/ame_money_txall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部提现"
            android:textColor="@color/color_zhuse"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/ame_money_tx_startmoney"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:text="最低提现金额100元"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        app:layout_constraintTop_toBottomOf="@id/rl1"
        />


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/rl1"
        android:layout_marginTop="@dimen/dp30"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择银行"
            android:textColor="@color/color_name"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/ame_money_selectbank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp80"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:hint="请选择银行"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/rl2"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户姓名"
            android:textColor="@color/color_name"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/ame_money_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp80"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:hint="请输入账户姓名"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/rl3"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户号码"
            android:textColor="@color/color_name"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/ame_money_banknumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp80"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:hint="请输入银行卡号"
            android:inputType="number"
            android:maxLength="19"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/rl4"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认账户"
            android:textColor="@color/color_name"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/ame_money_banknumber2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp80"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="19"
            android:hint="请输入银行卡号"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/rl5"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/color_name"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/ame_money_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp80"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="@dimen/dp14"
            android:textColor="@color/color_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rl6"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="@dimen/dp30"
        android:paddingRight="@dimen/dp30"
        >

        <TextView
            android:id="@+id/ame_money_txbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/selector_longin"
            android:text="申请提现"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>