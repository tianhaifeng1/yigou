<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fm_shop_detial_icon"
            android:layout_width="match_parent"
            android:layout_height="360dp" />

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/fm_shop_detial_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp360"
            android:visibility="gone"
            app:canLoop="false"></com.bigkoo.convenientbanner.ConvenientBanner>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:background="@drawable/main_bottom_title_bg">

            <TextView
                android:id="@+id/fm_shop_detial_price_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lineHeight="@dimen/dp26"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp12"
                android:textColor="@color/textcolor_white"
                android:textStyle="bold"
                android:textSize="@dimen/dp26"
                tools:text="￥0.8" />

            <TextView
                android:id="@+id/fm_shop_detial_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp26"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/fm_shop_detial_price_vip"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lineHeight="@dimen/dp26"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp5"
                android:text="￥1.0"
                android:textColor="@color/textcolor_white"
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp12">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/jstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离本商品结束还剩:"
                    android:textSize="@dimen/dp12"
                    android:textColor="@color/textcolor_white" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/fm_shop_detial_djs_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp20"
                    android:layout_below="@id/jstext"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp3"
                    android:background="@drawable/shape_c_white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingRight="@dimen/dp20"
                    tools:text="12：00：00"
                    android:textSize="@dimen/dp12"
                    android:textColor="@color/textcolor_point" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/fm_shop_detial_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:textColor="@color/color_name"
            android:textSize="@dimen/dp18"
            android:layout_marginTop="@dimen/dp5"
            tools:text="name" />

        <TextView
            android:id="@+id/fm_shop_detial_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_name"
            android:textSize="@dimen/dp16"
            tools:text="备注" />

        <TextView
            android:visibility="gone"
            android:id="@+id/fm_shop_detial_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:textSize="@dimen/dp14"
            android:lineSpacingExtra="@dimen/dp2"
            android:textColor="@color/ys_color_two"
            tools:text="预售时间：2020.01.16 08:00:00\n送货时间：2020.01.17 08:00:00" />


        <RelativeLayout
            android:id="@+id/fm_shop_detial_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp12"
                android:layout_centerVertical="true"
                android:src="@mipmap/jrtm_remind" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp18"
                android:maxLines="1"
                android:text="此商品一天仅限购一件"
                android:textColor="#ec3d57"
                android:textSize="@dimen/dp12" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fm_shop_detial_guige"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12">

            <TextView
                android:id="@+id/fm_shop_detial_guigetext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="规格：选择"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40">

            <TextView
                android:id="@+id/fm_shop_detial_tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/yigou_color_red"
                android:gravity="center"
                android:text="商品详情"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/fm_shop_detial_tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/color_content" />
        </LinearLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:ignore="WebViewLayout"></WebView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/item_recyclerview_space_h"
            android:paddingTop="@dimen/item_recyclerview_space_v"
            android:paddingRight="@dimen/item_recyclerview_space_h"
            android:paddingBottom="@dimen/item_recyclerview_space_v"
            android:scrollbars="none"
            android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/default_textview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="暂无内容" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_line" />

        <ImageView
            android:id="@+id/gwzn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp400"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>