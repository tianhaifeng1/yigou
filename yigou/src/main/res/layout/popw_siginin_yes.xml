<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pwpw_rule_lin"
        android:layout_width="@dimen/dp280"
        android:layout_height="@dimen/dp270"
        android:layout_centerInParent="true"
        android:background="@mipmap/sigsuccess"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp20"
        android:padding="@dimen/dp15">

        <LinearLayout
            android:id="@+id/signin_complete_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="@dimen/dp30"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:layout_gravity="center"
                android:src="@mipmap/sigsuccessbgd"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp25"
                android:textColor="@color/color_name"
                android:gravity="center"
                android:text="签到成功"/>
            <TextView
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下单购买任意商品，签到商品免费送"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/popw_yes_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwpw_rule_lin"
        android:layout_marginTop="@dimen/dp3"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/signin_rule_no"/>
</RelativeLayout>

