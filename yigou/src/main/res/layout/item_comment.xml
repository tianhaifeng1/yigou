<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp290"
    android:background="@color/color_bg_ff"
    android:paddingTop="@dimen/dp10"
    >

    <ImageView
        android:id="@+id/item_comment_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@mipmap/ic_applogo" />

    <TextView
        android:id="@+id/item_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/item_comment_image"
        android:textColor="@color/color_name"
        android:textSize="@dimen/dp16"
        tools:text="TextView" />

    <TextView
        android:id="@+id/item_comment_attrStrValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/item_comment_image"
        android:text="TextView"
        android:textColor="@color/color_content" />

    <EditText
        android:id="@+id/item_comment_context"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/item_comment_image"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:gravity="top"
        android:hint="点击输入评价内容"
        android:padding="@dimen/dp10"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/item_comment_context"
        android:layout_marginTop="@dimen/dp5"
        android:background="@color/color_bg_fa" />

</RelativeLayout>
