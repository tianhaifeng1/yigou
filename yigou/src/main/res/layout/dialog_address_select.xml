<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="#fafafa"
        >

        <TextView
            android:id="@+id/dialog_address_select_cancle"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp15"
            android:textColor="@color/color_content"
            />
        <TextView
            android:id="@+id/dialog_address_select_affirm"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:text="确认"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/dp15"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_name"
            />
        <TextView
            android:id="@+id/dialog_address_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="可选用的地址"
            android:textSize="16dp"
            android:textColor="@color/color_name"
            />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_address_select_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>