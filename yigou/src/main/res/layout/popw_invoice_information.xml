<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_popwin_inspection_standard_corners20"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票类型："
                android:textColor="@color/color_name" />

            <TextView
                android:id="@+id/tv_invoice_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子发票（个人）"
                android:textColor="@color/color_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票抬头："
                android:textColor="@color/color_name" />

            <TextView
                android:id="@+id/tv_invoice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西藏如龙"
                android:textColor="@color/color_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_invoice_type_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="识别号："
                    android:textColor="@color/color_name" />

                <TextView
                    android:id="@+id/tv_invoice_identification_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35435435165465456"
                    android:textColor="@color/color_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司地址："
                    android:textColor="@color/color_name" />

                <TextView
                    android:id="@+id/tv_invoice_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陕西省西安市碑林区新兴IN之家"
                    android:textColor="@color/color_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话："
                    android:textColor="@color/color_name" />

                <TextView
                    android:id="@+id/tv_invoice_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15809206815"
                    android:textColor="@color/color_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户行："
                    android:textColor="@color/color_name" />

                <TextView
                    android:id="@+id/tv_invoice_openingBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="西安市兴庆路支行"
                    android:textColor="@color/color_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户："
                    android:textColor="@color/color_name" />

                <TextView
                    android:id="@+id/tv_invoice_accountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="546546546121314152"
                    android:textColor="@color/color_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_invoice_type_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话："
                    android:textColor="@color/color_name" />

                <TextView
                    android:id="@+id/tv_invoice_phone_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17792309035"
                    android:textColor="@color/color_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_invoice_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱："
                android:textColor="@color/color_name" />

            <TextView
                android:id="@+id/tv_invoice_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_content" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"
            android:layout_marginTop="@dimen/dp25" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp3"
            android:padding="@dimen/dp10"
            android:text="确定"
            android:textColor="@color/colorRedFont"
            android:textSize="18dp" />
    </LinearLayout>
</RelativeLayout>