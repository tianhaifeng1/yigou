<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="@dimen/dp5"
        >

        <ImageView
            android:id="@+id/item_shop_icon"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:src="@mipmap/page1"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/item_shop_masking"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_centerVertical="true"
            android:text="已售罄"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp16"
            android:background="@drawable/item_shop_masking_bg"
            />
        <ImageView
            android:id="@+id/item_shop_cart"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dp2"
            android:src="@mipmap/shopping_cart"
            />
        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            tools:text="名称"
            android:textSize="@dimen/dp16"
            android:textColor="@color/color_name"
            android:layout_toRightOf="@id/item_shop_icon"
            />
        <TextView
            android:id="@+id/item_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/dp20"
            android:gravity="bottom"
            android:text="￥0"
            android:textSize="@dimen/dp16"
            android:textColor="@color/textcolor_point"
            android:layout_below="@id/item_shop_name"
            android:layout_toRightOf="@id/item_shop_icon"
            />

        <TextView
            android:id="@+id/item_shop_price2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/dp10"
            android:gravity="bottom"
            android:text="￥0"
            android:textSize="@dimen/dp12"
            android:textColor="@color/color_content"
            android:layout_below="@id/item_shop_name"
            android:layout_toRightOf="@id/item_shop_price"
            android:layout_toLeftOf="@id/item_shop_cart"
            />
        <TextView
            android:id="@+id/item_shop_totalnumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/dp20"
            android:gravity="center_vertical"
            android:text="0"
            android:textSize="@dimen/dp12"
            android:textColor="@color/color_name"
            android:layout_below="@id/item_shop_price"
            android:layout_toRightOf="@id/item_shop_icon"
            android:layout_toLeftOf="@id/item_shop_cart"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        android:layout_marginLeft="100dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>