<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pwpw_rule_lin"
        android:layout_width="@dimen/dp300"
        android:layout_height="@dimen/dp220"
        android:layout_centerInParent="true"
        android:background="@mipmap/rule_background"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp20"
        android:padding="@dimen/dp10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp22"
            android:text="签到规则"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_popw_background"
            android:padding="@dimen/dp15"
            android:layout_gravity="center"
            android:id="@+id/popw_rule_linl"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_invoice_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.每天签到都可免费获得商品下单购买任意商品，签到商品免费送。"
                    android:textColor="@color/color_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.连续签到以7天为一个周期，连签7天获得神秘惊喜大礼。"
                    android:textColor="@color/color_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.如果中途断签，记录会自动清零。"
                    android:textColor="@color/color_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/popw_rule_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwpw_rule_lin"
        android:layout_marginTop="@dimen/dp3"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/signin_rule_no"/>
</RelativeLayout>
