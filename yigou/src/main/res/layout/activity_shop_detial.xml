<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Goods.GoodsDetialActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ttitle_and_top_h"
        tools:ignore="MissingConstraints">

        <include layout="@layout/ttitle" />
        <!---->
        <!--<RelativeLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_marginTop="@dimen/dp32"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--&gt;-->
            <!--<include layout="@layout/layout_tswitch_two"-->
                <!--/>-->
            <!---->
        <!--</RelativeLayout>-->


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ttitle_h"
            android:layout_alignParentBottom="true"
            app:tabMode="scrollable"
            android:layout_centerHorizontal="true"
            android:background="@color/color_white"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/colorblack"
            app:tabRippleColor="@color/color_bg_fa"
            ></com.google.android.material.tabs.TabLayout>

    </RelativeLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/ttitle_and_top_h"
        android:layout_marginBottom="@dimen/dp50"></androidx.viewpager.widget.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        android:layout_marginBottom="@dimen/dp50"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/sd_homepage"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/ic_details_home"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="@dimen/sp12"
                android:layout_marginTop="@dimen/dp20"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sd_server"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/ic_details_customer_service"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:textSize="@dimen/sp12"
                android:layout_marginTop="@dimen/dp20"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sd_shopcart"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/ic_details_shopping_cart"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="@dimen/sp12"
                android:layout_marginTop="@dimen/dp20"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/sd_shopcart_num"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp12"
            android:background="@mipmap/ic_minefragment_num"
            android:gravity="center"
            android:maxLength="2"
            android:text="10"
            android:textColor="@color/textcolor_point"
            android:textSize="@dimen/sp8"
            android:visibility="visible"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="@dimen/dp2"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/sd_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@drawable/selector_shopping_cart"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:text="加入购物车"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/sd_buy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/selector_buy_now"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:text="立即购买"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>