<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <include layout="@layout/ttitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/signin_record_backround"
            android:orientation="vertical"
            android:padding="@dimen/dp15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票类型" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/e_invoice"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_btn_black"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingRight="@dimen/dp10"
                    android:paddingBottom="@dimen/dp5"
                    android:text="电子发票" />

                <Button
                    android:id="@+id/z_invoice"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/dp30"
                    android:background="@drawable/shape_btn_black"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingRight="@dimen/dp10"
                    android:paddingBottom="@dimen/dp5"
                    android:text="纸质发票" />

                <Button
                    android:id="@+id/no_invoice"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/dp30"
                    android:background="@drawable/shape_btn_black"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingRight="@dimen/dp10"
                    android:paddingBottom="@dimen/dp5"
                    android:text="不开发票" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/instance_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invoice_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="发票信息" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/company_instance"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_btn_black"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:paddingRight="@dimen/dp10"
                        android:paddingBottom="@dimen/dp5"
                        android:text="公司" />

                    <Button
                        android:id="@+id/person_instance"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/dp30"
                        android:background="@drawable/shape_btn_black"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:paddingRight="@dimen/dp10"
                        android:paddingBottom="@dimen/dp5"
                        android:text="个人" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line" />

                <!--个人-->
                <LinearLayout
                    android:id="@+id/person_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="姓名"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_person_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="请输入姓名"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="电话"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_person_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="请输入电话"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <!--公司-->
                <LinearLayout
                    android:id="@+id/company_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="发票抬头"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_company_invoice_rise"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="请输入发票抬头"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="识别号"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_company_invoice_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="纳税人识别号或统一社会代码"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="公司地址"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_company_invoice_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="请输入公司地址"
                            android:lineSpacingExtra="5dp"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="公司电话"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_company_invoice_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="请输入电话号码"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingLeft="@dimen/dp5">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="开户行名称"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_company_invoice_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="请输入开户行名称"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10">

                        <TextView
                            android:layout_width="@dimen/dp70"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp10"
                            android:gravity="center"
                            android:text="开户账号"
                            android:textColor="@color/color_name"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_company_invoice_account_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:hint="请输入开户账号"
                            android:textSize="14dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/ed_company_invoice_email_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ed_company_invoice_email_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp10"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/dp70"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:gravity="center"
                    android:text="邮箱地址"
                    android:textColor="@color/color_name"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/ed_company_invoice_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:hint="请输入邮箱地址"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_instance_btn"
                android:layout_width="270dp"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp30"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/selector_longin"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:text="@string/instance_context" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
