<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".activity.Goods.GoodsListActivity">

    <include layout="@layout/statetitle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ttitle_h"
        android:paddingRight="@dimen/dp20"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="@dimen/ttitle_h"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_back"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"/>

        <RelativeLayout
            android:id="@+id/title_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_weight="8"
            android:background="@drawable/shape_c_f6">

            <ImageView
                android:layout_width="@dimen/dp40"
                android:layout_height="match_parent"
                android:src="@mipmap/main_search"
                android:padding="@dimen/dp8"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp40"
                android:gravity="center_vertical"
                android:text="搜索商品"
                android:textColor="@color/textcolor_tishi" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/title_gwc"
            android:layout_width="@dimen/ttitle_h"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_weight="1"
            app:srcCompat="@mipmap/t_cart"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"/>

    </LinearLayout>

    <include layout="@layout/layout_filter" />

</LinearLayout>