<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/waikuang_r5_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10">

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:src="@mipmap/t_tk_img1" />

        <TextView
            android:id="@+id/item_tk_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp60"
            android:lineHeight="@dimen/dp20"
            android:gravity="center_vertical"
            android:textColor="@color/color_name"
            android:textStyle="bold"
            tools:text="如龙配送如龙配送如" />

        <TextView
            android:id="@+id/item_tk_shopaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tk_shopname"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp60"
            android:lineHeight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:textColor="@color/color_content"
            android:textSize="@dimen/dp12"
            tools:text="如龙配送" />

        <TextView
            android:id="@+id/item_tk_shopnotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="@dimen/dp20"
            android:layout_alignParentRight="true"
            android:text="退款"
            android:textColor="@color/color_name"
            android:textSize="@dimen/dp14" />

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginRight="@dimen/dp6"
            android:layout_toLeftOf="@id/item_tk_shopnotes"
            android:src="@mipmap/t_tk_img2" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_tk_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/item_tk_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_r_ba"
        android:paddingLeft="@dimen/dp30"
        android:paddingTop="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:textColor="@color/color_name"
        tools:text="退款中" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tk_look"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:background="@drawable/shape_c_red_line"
            android:text="退款详情"
            android:textColor="@color/textcolor_point"
            android:textSize="@dimen/sp12"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_tk_tk"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:background="@drawable/shape_c_black_line"
            android:text="再次申请退款"
            android:textColor="@color/color_name"
            android:textSize="@dimen/sp12"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>