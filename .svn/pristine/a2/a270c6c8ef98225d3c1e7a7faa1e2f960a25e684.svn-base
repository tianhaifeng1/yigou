<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/waikuang_r5_white"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/dialog_goodspecinfo_guige"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="规格"
            android:gravity="center_vertical"
            android:textColor="@color/color_name"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:textSize="14dp"
            android:layout_marginTop="@dimen/dp10"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_goodspecinfo_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp40"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            ></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp80"
                android:layout_weight="1"
                android:text="购买数量"
                android:gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/dialog_goodspecinfo_minus"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:padding="@dimen/dp7"
                android:background="@mipmap/goodscart_jian"
                android:layout_below="@id/dialog_goodspecinfo_recyclerview"
                android:layout_marginTop="@dimen/dp1"
                />

            <TextView
                android:id="@+id/dialog_goodspecinfo_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:minWidth="@dimen/dp50"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/dialog_goodspecinfo_add"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:padding="@dimen/dp7"
                android:background="@mipmap/goodscart_jia"
                android:layout_below="@id/dialog_goodspecinfo_recyclerview"
                android:layout_marginTop="@dimen/dp1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="center_vertical"
            android:background="@drawable/dialog_goods_specinfo2_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_goodspecinfo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥ 52.00"
                android:textColor="@color/colorRedFont"
                android:textSize="@dimen/dp18"
                />

            <TextView
                android:id="@+id/dialog_goodspecinfo_addcart"
                android:layout_width="120dp"
                android:layout_height="@dimen/dp40"
                android:background="@drawable/dialog_goods_specinfo_textview_addcart"
                android:text="加入购物车"
                android:textColor="@color/color_name"
                android:textSize="14dp"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_goodspecinfo_close"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="right"
        android:src="@mipmap/ic_close"
        android:padding="@dimen/dp10"
        />

</FrameLayout>