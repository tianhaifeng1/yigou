<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp180"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="@dimen/dp5"
        android:background="@drawable/waikuang_r5_white"
        >

        <ImageView
            android:id="@+id/item_shop_icon"
            android:layout_width="@dimen/dp110"
            android:layout_height="@dimen/dp120"
            android:scaleType="fitCenter"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/dp10"
            />

        <TextView
            android:id="@+id/item_shop_masking"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp100"
            android:text="抢光了"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp16"
            android:background="@drawable/item_shop_masking_bg"
            android:layout_marginTop="@dimen/dp10"
            />

        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="name"
            android:layout_toRightOf="@id/item_shop_icon"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/dp16"
            android:textColor="@color/color_name"
            />
        <TextView
            android:id="@+id/item_shop_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="备注"
            android:layout_toRightOf="@id/item_shop_icon"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/dp12"
            android:textColor="@color/color_content"
            android:layout_below="@id/item_shop_name"
            android:layout_marginTop="@dimen/dp2"
            />

        <TextView
            android:id="@+id/item_shop_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="@dimen/dp2"
            android:layout_toRightOf="@id/item_shop_icon"
            tools:text="预售时间：2020.01.16 08:00:00\n送货时间：2020.01.17 08:00:00"
            android:textSize="@dimen/dp11"
            android:textColor="@color/ys_color_two"
            android:layout_below="@id/item_shop_remark"
            />

        <TextView
            android:id="@+id/item_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="￥0"
            android:textSize="@dimen/dp14"
            android:textColor="@color/textcolor_point"
            android:layout_below="@id/item_shop_time"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toRightOf="@id/item_shop_icon"
            />

        <TextView
            android:id="@+id/item_shop_price2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/dp5"
            android:gravity="bottom"
            android:text="￥0"
            android:textSize="@dimen/dp12"
            android:textColor="@color/color_content"
            android:layout_below="@id/item_shop_time"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toRightOf="@id/item_shop_price"
            android:layout_toLeftOf="@id/item_shop_cart"
            />


        <TextView
            android:id="@+id/item_shop_cart"
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_shop_time"
            android:layout_marginTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:background="@drawable/shape_c_jiesuan"
            android:backgroundTintMode="src_in"
            android:minWidth="60dp"
            android:text="加入购物车"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp10"
            />

        <View
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"
            android:layout_below="@id/item_shop_icon"
            android:layout_marginTop="@dimen/dp4"
            />

        <LinearLayout
            android:id="@+id/item_shop_gmr_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp20"
            android:layout_below="@id/item_view"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_shop_gmr5"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/default_img"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/item_shop_gmr4"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/default_img"
                android:scaleType="fitXY"
                android:layout_marginLeft="-6dp"/>
            <ImageView
                android:id="@+id/item_shop_gmr3"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/default_img"
                android:scaleType="fitXY"
                android:layout_marginLeft="-6dp"/>
            <ImageView
                android:id="@+id/item_shop_gmr2"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/default_img"
                android:scaleType="fitXY"
                android:layout_marginLeft="-6dp"/>
            <ImageView
                android:id="@+id/item_shop_gmr1"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/default_img"
                android:scaleType="fitXY"
                android:layout_marginLeft="-6dp"/>
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/default_more"
                android:scaleType="fitXY"
                android:layout_marginLeft="-6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:layout_weight="1"
                android:text="购买了此商品"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp10"
                android:textColor="@color/color_content"
                android:textSize="@dimen/dp10"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp20"
                android:src="@mipmap/right" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>