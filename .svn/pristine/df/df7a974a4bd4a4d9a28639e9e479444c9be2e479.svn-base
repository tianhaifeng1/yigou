<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.address.AddressManageActivity">

    <include layout="@layout/ttitle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp80"
            android:layout_weight="1"
            android:paddingLeft="@dimen/item_recyclerview_space_h"
            android:paddingTop="@dimen/item_recyclerview_space_v"
            android:paddingRight="@dimen/item_recyclerview_space_h"
            android:paddingBottom="@dimen/item_recyclerview_space_v"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/address_manage_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp50"
                android:layout_marginRight="@dimen/dp50"
                android:background="@drawable/selector_longin"
                android:gravity="center"
                android:text="添加收货地址"
                android:textColor="@color/color_white" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_default_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_fa"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/layout_default_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/default_addresslist" />

            <TextView
                android:id="@+id/layout_default_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_default_img"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="暂无数据"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/address_manage_add2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp50"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp50"
                android:background="@drawable/selector_longin"
                android:gravity="center"
                android:text="添加收货地址"
                android:textColor="@color/color_white" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>