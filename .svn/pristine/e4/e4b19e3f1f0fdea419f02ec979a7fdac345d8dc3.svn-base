<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <TextView
            android:id="@+id/item_syranking_id"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            tools:text="20"
            />

        <ImageView
            android:id="@+id/item_syranking_icon"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            tools:src="@mipmap/t_head"
            />

        <TextView
            android:id="@+id/item_syranking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_syranking_icon"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            tools:text="name"
            android:textColor="@color/color_content"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_syranking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_syranking_name"
            android:layout_toRightOf="@id/item_syranking_icon"
            android:gravity="center_vertical"
            tools:text="ï¿¥ 0.00"
            android:textColor="@color/color_content"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>