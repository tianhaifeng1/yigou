<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Goods.GoodsDetialActivity">

    <include layout="@layout/ttitle" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="75dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="51dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/guideline7"
        app:tabIndicatorColor="@color/textcolor_point"
        app:tabMode="fixed"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="@color/color_bg_fa"
        app:tabSelectedTextColor="@color/textcolor_point"
        app:tabTextColor="@color/colorblack"></com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tablayout"
        app:layout_constraintBottom_toBottomOf="@id/guideline8"
        ></androidx.viewpager.widget.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        app:layout_constraintTop_toBottomOf="@id/guideline8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/sd_homepage"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_details_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:text="首页"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sd_server"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_details_customer_service" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:text="客服"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sd_shopcart"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_details_shopping_cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:text="购物车"
                android:textSize="@dimen/sp12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/sd_shopcart_num"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp12"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="@dimen/dp2"
            android:background="@mipmap/ic_minefragment_num"
            android:gravity="center"
            android:maxLength="2"
            android:text="10"
            android:textColor="@color/textcolor_point"
            android:textSize="@dimen/sp8"
            android:visibility="visible" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sd_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@drawable/selector_shopping_cart"
            android:gravity="center"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:text="加入购物车"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/sd_buy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_buy_now"
            android:gravity="center"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:text="立即购买"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>