<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp110"
    android:paddingTop="@dimen/dp5"
    android:paddingBottom="@dimen/dp5"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/item_shopcart_icon"
            android:layout_width="@dimen/dp90"
            android:layout_height="match_parent"
            android:src="@mipmap/page1"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/item_shopcart_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三"
            android:lineSpacingExtra="@dimen/dp2"
            android:layout_toRightOf="@id/item_shopcart_icon"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/color_name"
            />

        <TextView
            android:id="@+id/item_shopcart_guige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@id/item_shopcart_name"
            android:paddingTop="@dimen/dp5"
            tools:text="张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三张三"
            android:lineSpacingExtra="@dimen/dp2"
            android:layout_toRightOf="@id/item_shopcart_icon"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/color_content"
            android:textSize="@dimen/dp12"
            />

        <TextView
            android:id="@+id/item_shopcart_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            android:maxLines="1"
            tools:text="￥3.99"
            android:textColor="@color/textcolor_point"
            android:gravity="center"
            android:layout_toRightOf="@id/item_shopcart_icon"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/item_shopcart_num"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp30"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            tools:text="×1"
            android:textColor="@color/color_content"
            />

    </RelativeLayout>


</LinearLayout>