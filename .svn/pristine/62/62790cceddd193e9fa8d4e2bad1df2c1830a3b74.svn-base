<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_remind">

    <TextView
        android:id="@+id/dialog_remind_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提示"
        android:gravity="center"
        android:textSize="@dimen/dp16"
        android:textColor="@color/color_name"
        android:background="@drawable/shape_dialog_remind_title"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/dialog_remind_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        tools:text="提示语"
        android:textSize="@dimen/dp16"
        android:textColor="@color/color_content"
        android:padding="@dimen/dp10"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40">

        <TextView
            android:id="@+id/dialog_remind_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/dp14"
            android:gravity="center"
            android:textColor="@color/color_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/dialog_remind_affirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认"
            android:textSize="@dimen/dp14"
            android:gravity="center"
            android:textColor="@color/color_name"
            />

    </LinearLayout>

</LinearLayout>